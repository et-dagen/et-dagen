{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --dotenv .env.development",
    "start": "node .output/server/index.mjs",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint:js": "eslint --ext \".ts,.vue,.js,.cjs,.mjs,.yml,\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint": "pnpm lint:js && pnpm lint:prettier",
    "lintfix": "prettier --write --list-different . && pnpm lint:js --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue,css,scss,md,yml}": "prettier --write",
    "*.{js,ts,vue}": "eslint"
  },
  "devDependencies": {
    "@nuxt/devtools": "^0.7.4",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@nuxtjs/i18n": "^8.0.0-rc.3",
    "@types/node": "^18",
    "@typescript-eslint/parser": "^5.59.11",
    "@vueuse/core": "^10.5.0",
    "@vueuse/nuxt": "^10.5.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.3.0",
    "nuxt": "^3.6.5",
    "nuxt-vitest": "^0.8.5",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@nuxt/image": "^1.1.0",
    "@pinia/nuxt": "^0.4.11",
    "dotenv": "^16.1.4",
    "firebase": "^9.22.2",
    "firebase-admin": "^11.9.0",
    "pinia": "^2.1.4",
    "sass": "^1.64.2",
    "vuetify-nuxt-module": "^0.5.6"
  }
}
